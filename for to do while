#include <stdio.h>

int main() {
     int weeks=2, days_in_week =7;
     int i=1;
     do{
         printf("week %d\n", i);
         int j= 1;
         do{
             if(i%2==0){
                 if(j%2==0){
                 printf("  day :%d\n", j);
                 }
             }
             else {
                 if (j%2 !=0){
                 printf("   day: %d\n",j);
             }
             
         }
         ++j;
             } while (j<= days_in_week);
             ++i;
     } while(i<=weeks);
     
     
     

    return 0;
}
